<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[CASINO %d{HH:mm:ss}] [%t/%level] [%logger{36}]: %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <!-- Debug logging for your mod -->
        <Logger name="com.example.casinomod" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <!-- Silence other noisy logs -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
